{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@type/*": ["src/components/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/locales/**/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": []
}
