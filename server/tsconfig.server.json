{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "outDir": "../dist/server",
    "noEmit": false,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowJs": false,
    "skipLibCheck": true,
    "types": ["node"],        // Ajout des types Node
    "resolveJsonModule": true // Pratique si tu importes du JSON
  },
  "include": ["./**/*"],
  "exclude": ["../node_modules", "../client", "../dist"]
}
