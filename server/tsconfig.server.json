{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "../dist/server",
    "rootDir": "../",             
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "server/*.ts",
    "shared/*.ts"
  ],
  "exclude": [
    "node_modules",
    "client",
    "dist",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}
