{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "rootDir": "../",
    "outDir": "../dist/server",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true                         
  },
  "include": [
    "**/*.ts",
    "./**/*.ts",
    "./Types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "../dist"]
}
    
