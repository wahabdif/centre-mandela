{
  "extends": "../tsconfig.json",  // Cette ligne reste inchang√©e
  "compilerOptions": {
    "outDir": "./dist",  // Sortie vers 'server/dist'
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["./**/*.ts"],  // Inclut tous les fichiers .ts dans le dossier server/
  "exclude": ["node_modules", "dist"]  // Ignore les fichiers dans node_modules et dist
}
