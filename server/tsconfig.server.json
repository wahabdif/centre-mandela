{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "dist/server",
    "target": "ES2020",
    "moduleResolution": "Node",
    "noEmit": false,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowJs": false,
    "skipLibCheck": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "client", "dist"]
}
