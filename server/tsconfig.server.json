{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "../dist/server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true, // Ajout pour faciliter le débogage
    "forceConsistentCasingInFileNames": true // Ajout pour éviter les erreurs liées à la casse
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "../dist"]
}