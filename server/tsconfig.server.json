{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "rootDir": "./",,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true                         
  },
  "include": [
    "**/*.ts",
    "./**/*.ts",
    "./Types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "../dist"]
}
    
