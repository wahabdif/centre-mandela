{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "../dist/server",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]  
    },
    "module": "node16",
    "target": "es2020",  
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["../node_modules", "../client", "../dist"]
}
