{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "../dist/server",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node","express"]
  },
  "include": [
    "**/*.ts",
    "./**/*.ts",
    "./Types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "../dist"]
}
    