{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../dist/server",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "composite": true,
    "types": ["node"]
     "typeRoots": ["./node_modules/@types", "../node_modules/@types"]
  },
  "include": ["./**/*"],
  "exclude": ["../dist", "node_modules"]
}
