{
  "extends": "../tsconfig.json", // si tu as un tsconfig global Ã  la racine
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".", // base sur server/
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "typeRoots": ["./types", "../node_modules/@types"]
  },
  "include": ["./**/*.ts", "../shared/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
