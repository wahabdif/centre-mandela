{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                         // Pour supporter `import.meta`
    "outDir": "../dist/server",
    "rootDir": "../",                           // Doit inclure `server/` ET `shared/`
    "baseUrl": "../",                           // Pour les paths relatifs depuis la racine
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules", "client", "dist"]
}
