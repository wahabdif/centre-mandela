    "archiver": "^7.0.1",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "express": "^5.1.0",
    "globals": "^16.2.0",
    "jest": "^29.6.0",
    "passport": "^0.7.0",
    "session": "^0.1.0",
    "ts-node-dev": "^2.0.0",
