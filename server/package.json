{
  "name": "centre-mandela-server",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.server.json",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "preinstall": "npm install -g typescript eslint",
    "postinstall": "echo 'Dependencies installed successfully'",
    "prepare": "npm run clean && npm run build",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "better-sqlite3": "^8.3.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "nanoid": "^4.0.0",
    "node": "^20.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.17",
    "@types/node": "^20.17.55",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.42.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "jest": "^29.6.0",
    "@types/jest": "^29.6.0"
  }
}
