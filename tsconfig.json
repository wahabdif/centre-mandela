{
  "compilerOptions": {
    "baseUrl": "client",
    "rootDir": ".",
    "outDir": "../dist/server",
    "types": ["node"],
    "typeRoots": ["./types", "../node_modules/@types"],
    "paths": {
      "@/*": ["client/src/*"],
      "@components/*": ["client/src/components/*"],
      "@lib/*": ["client/src/lib/*"],
      "@utils/*": ["client/src/utils/*"],
      "@shared/*": ["shared/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "client",
    "client/src/Type",
    "server",
    "server/**/*.ts",
    "shared",
    "shared/**/*.ts",
    "shared/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}
