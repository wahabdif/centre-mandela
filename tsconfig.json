{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                // pour supporter ES modules côté Node
    "moduleResolution": "NodeNext",      // résolution compatible avec ES Modules
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    },
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node"]                    // ajoute les types Node globalement
  },
  "include": [
    "client/src",
    "shared",
    "server"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}
