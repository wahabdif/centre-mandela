{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "typeRoots": ["./server/types", "./node_modules/@types"],
    "paths": {
      "@/*": ["client/src/*"],
      "@utils/*": ["client/src/utils/*"],
      "@shared/*": ["shared/*"]
    },
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "outDir": "dist",
    "isolatedModules": true,  // bon pour React + vite + esbuild
    "noEmit": false,          // on veut bien générer les fichiers dans dist
    "sourceMap": true         // utile pour debug
  },
  "include": [
    "client/src",
    "shared",
    "server/src",
    "client/src/Type"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.test.js"
  ]

}
