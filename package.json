{
  "name": "centre-mandela",
  "version": "1.0.0",
  "description": "Centre d’imagerie médicale Nelson Mandela",
  "license": "MIT",
  "type": "module",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "vite",
    "dev:server": "tsx server/src/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm install && npm run build",
    "build:server": "tsc -p server/tsconfig.server.json",
    "build:ssr": "vite build --config vite.config.ts",
    "check": "tsc --noEmit",
    "clean": "rm -rf dist && rm -rf client/dist",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "start": "node dist/server/index.js",
    "preview": "vite preview",
    "test": "jest"
  },
  "dependencies": {
    "express": "^5.1.0",
    "dotenv": "^16.5.0",
    "better-sqlite3": "^11.10.0",
    "@hookform/resolvers": "^3.10.0",
    "@tanstack/react-query": "^5.60.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.2",
    "typescript": "^5.6.3",
    "tsx": "^4.19.1",
    "eslint": "^8.33.0",
    "jest": "^28.1.3",
    "@types/express": "^4.17.22",
    "@types/node": "^20.17.55",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "prettier": "^2.8.0"
  }
}