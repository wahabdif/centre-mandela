{
  "name": "centre-mandela",
  "version": "1.0.0",
  "description": "Centre d’imagerie médicale Nelson Mandela",
  "license": "MIT",
  "type": "module",
  "main": "server/dist/index.js",
  "scripts": {
    "dev": "npm run dev --prefix client",
    "dev:server": "tsx server/index.ts",
    "build": "npm run build --prefix client && npm run build:server",
    "build:server": "tsc -p ./server/tsconfig.server.json",
    "start": "node server/dist/index.js",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "check": "tsc --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "express": "^4.18.2",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/node": "^20.16.11",
    "eslint": "^8.33.0",
    "jest": "^28.1.3",
    "prettier": "^2.8.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
